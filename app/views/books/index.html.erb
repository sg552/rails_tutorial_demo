<h1>书籍列表</h1>


<%= form_tag '/books', :method => 'get' do %>
  <%= text_field_tag 'query_text', params[:query_text] %>
  <%= submit_tag '查询' %>
<% end %>
<br/>

<table style='border: 1px solid black'>
  <thead>
    <tr>
      <th>标题</th>
      <th>作者</th>
      <th>发表时间</th>
      <th>介绍</th>
      <th>借阅过的人</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author.name %></td>
        <td><%= book.public_at %></td>
        <td><%= book.introduction %></td>
        <td>
          <% book.readers.each do |reader| %>
            <%= reader.name %>
          <% end %>
        </td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新建', new_book_path %>




