<%= form_for(@book) do |f| %>

    标题:<br>
    <%= f.text_field :title %> <br/><br/>
    出版时间:<br>
    <%= f.text_field :public_at %><br/><br/>
    介绍:<br>
    <%= f.text_area :introduction %><br/><br/>

    读者: <br/>
    <%= select_tag :reader_ids, options_from_collection_for_select(Reader.all, :id, :name), :multiple => true %>

    <br/><br/>

    <%= f.submit %><br/>
<% end %>
