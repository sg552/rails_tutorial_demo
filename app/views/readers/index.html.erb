<h1>读者列表</h1>

<p><%= say_hi "韩梅梅" %></p>
<table style='border: 1px solid black; width: 600px'>
  <thead>
    <tr>
      <th>名称</th>
      <th>借阅过的书</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @readers.each do |reader| %>
      <tr>
        <td><%= reader.name %></td>
        <td>

          <% reader.books.each { |book| %>
            <%= book.title %>,
          <% } %>
        </td>
        <td><%= link_to 'Show', reader %></td>
        <td><%= link_to 'Edit', edit_reader_path(reader) %></td>
        <td><%= link_to 'Destroy', reader, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reader', new_reader_path %>
